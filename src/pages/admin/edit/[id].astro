---
import Layout from '../../../layouts/Layout.astro';
import { getPillarById } from '../../../db/lib';

const { id } = Astro.params;
const pillar = await getPillarById(Number(id));
---
<Layout title={`Edit Pillar: ${pillar.title}`}>
    <div class="container mx-auto p-4">
        <h1 class="text-4xl font-bold mb-8">Edit Pillar</h1>
        <form id="edit-pillar-form" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <input type="hidden" id="pillar-id" value={pillar.id} />
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="title">
                    Title
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="title" type="text" value={pillar.title}>
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="content">
                    Content
                </label>
                <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="content" rows="10">{pillar.content}</textarea>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="excerpt">
                    Excerpt
                </label>
                <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="excerpt" rows="3">{pillar.excerpt}</textarea>
            </div>
            <div class="flex items-center justify-between">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Update Pillar
                </button>
            </div>
        </form>
    </div>
    <script>
        document.getElementById('edit-pillar-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const id = (document.getElementById('pillar-id') as HTMLInputElement).value;
            const title = (document.getElementById('title') as HTMLInputElement).value;
            const content = (document.getElementById('content') as HTMLTextAreaElement).value;
            const excerpt = (document.getElementById('excerpt') as HTMLTextAreaElement).value;

            const response = await fetch(`/api/posts/${id}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ title, content, excerpt })
            });

            if (response.ok) {
                window.location.href = '/admin/dashboard';
            } else {
                alert('Failed to update pillar.');
            }
        });
    </script>
</Layout>
